<%- include('header') -%>
<body>
<div class="container mt-5">
    <div class="row justify-content-md-center pb-5">
        <div class="col-11 border-bottom border-4 border-dark">
            <h1>Bejelentkezés</h1>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-5">
            <form method="POST">
                <div class="row justify-content-md-center">
                    <% if (typeof error !== 'undefined') { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    <% if (typeof message !== 'undefined') { %>
                        <div class="alert alert-success"><%= message %></div>
                    <% } %>
                </div>
                <div class="row pb-5 justify-content-md-center">
                    <div class="input-group">
                        <span class="input-group-text">E-mail cím:</span>
                        <input type="text" name="email" aria-label="E-mail" class="form-control">
                    </div>
                </div>
                <div class="row pb-5 justify-content-md-center">
                    <div class="input-group">
                        <span class="input-group-text">Jelszó:</span>
                        <input type="password" name="password" aria-label="Jelszó" class="form-control">
                    </div>
                </div>
                <div class="row justify-content-around">
                    <div class="col-6 text-center">
                        <input type="submit" class="btn btn-primary" value="Bejelentkezés"/>
                    </div>
                    <div class="col-6 text-center">
                        <a type="button" class="btn btn-primary" href="/registry">Regisztráció</a>
                    </div>
                </div>
            </form>
            <div class="row justify-content-md-center pt-5">
                <div class="col-6 text-center">
                    <a type="button" class="btn btn-link" href="/forgotten_password">Elfelejtettem a jelszavamat</a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('footer') -%>