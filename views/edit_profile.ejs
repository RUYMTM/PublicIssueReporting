<%- include('header') -%>
<body>
<div class="container mt-5">
    <div class="row justify-content-md-center pb-5">
        <div class="col-11 border-bottom border-4 border-dark">
            <h1>Adatlap szerkesztése</h1>
        </div>
    </div>
    <form method="POST">
        <div class="row justify-content-md-center">
            <div class="col-5">
                <div class="row justify-content-md-center">
                    <% if (typeof error !== 'undefined') { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                </div>
                <div class="row pb-5 justify-content-md-center">
                    <div class="input-group">
                        <span class="input-group-text">E-mail cím:</span>
                        <input type="text" aria-label="E-mail" name="email" value="<%= user.email %>" class="form-control">
                    </div>
                </div>
                <div class="row pb-5 justify-content-md-center">
                    <div class="input-group">
                        <span class="input-group-text">Vezetéknév:</span>
                        <input type="text" aria-label="Vezetéknév" name="lastname" value="<%= user.lastname %>" class="form-control">
                    </div>
                </div>
                <div class="row pb-5 justify-content-md-center">
                    <div class="input-group">
                        <span class="input-group-text">Keresztnév:</span>
                        <input type="text" aria-label="Keresztnév" name="firstname" value="<%= user.firstname %>" class="form-control">
                    </div>
                </div>
                <div class="row pb-5 justify-content-md-center">
                    <div class="input-group">
                        <span class="input-group-text">Jelszó:</span>
                        <input type="password" aria-label="Jelszó" name="password" class="form-control">
                    </div>
                </div>
                <div class="row pb-5 justify-content-md-center">
                    <div class="input-group">
                        <span class="input-group-text">Jelszó megerősítés:</span>
                        <input type="password" aria-label="Jelszó megerősítés" name="passwordConfirmation" class="form-control">
                    </div>
                </div>
                <div class="row justify-content-around">
                    <div class="col-2">
                        <input type="submit" class="btn btn-primary" value="Mentés"/>
                    </div>
                    <div class="col-2">
                        <a type="button" class="btn btn-primary" href="/profile/<%= user._id %>">Mégsem</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<%- include('footer') -%>